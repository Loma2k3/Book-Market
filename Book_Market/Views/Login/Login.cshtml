@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Book_Market.Models.Authentication

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="~/login.css" rel="stylesheet" />
</head>
<body>

    <div id="bb-body">
        <div class="bb-login">
            <form method="post" asp-controller="Login" asp-action="Login">
                <div class="login-box">
                    <div class="top">
                        <h3> Đăng nhập</h3>
                    </div> 
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="bb-login">
                        <div class="form-groub">
                            <span asp-validation-for="Username"></span>
                            <input class="form-control" placeholder="Email" asp-for="Username">
                        </div>
                        <div class="input-group pass-box">
                            <span asp-validation-for="Password"></span>
                            <input class="form-control" asp-for="Password" placeholder="Mật khẩu">
                        
                        </div>
                        <input type="submit" class="edit" value="Đăng nhập">
                    </div>
                    <div class="bottom">
                        Chưa có tài khoản?
                        <a asp-controller="Login" asp-action="Register"> Đăng kí tại đây</a>
                    </div>
                </div>

            </form>
        </div>

    </div>




</body>
</html>